@media screen
  body
    margin: auto 0.8in
    max-width: 800px
    font-size: 120%
    line-height: 170%
    overflow-x: hidden

  h1
    margin: 8mm 0 2mm 0

  section
    clear: both

  article, section, nav
    margin-top: 5em

@media print
  :root
    //column-count: 2
    //column-gap: $body-column-gap
    widows: 1
    orphans: 1

  .one-column
    column-span: all

article#html5, article#css_de_animation,
article#npm, article#vue, article#react,
article#docker
  page-break-before: always
  page-break-after: always

h1, h2, h3
  break-after: avoid

pre, tr, th, td
  break-inside: avoid

article.font_awesome
  page-break-before: always
  page-break-after: always
  float-reference: column
  float: block-start
  -ah-float: bottom multicol

section#introduction,
nav#toc,
section#postscript,
section#profile
  break-before: column

nav#toc
  page-break-after: always

  a:after
    content: target-counter(attr(href, url), page, decimal)
    font-size: 16px
    line-height: 16px

section#colophon
  float-reference: column
  float: block-end
  float: column-bottom
  -ah-float: bottom multicol

@page
  size: $page-width $page-height
  margin: 5px

  // for publishing output
  //bleed: $page-bleed
  //marks: crop cross

  @bottom-left-corner
    content: " "
    margin-top: 36px
    margin-bottom: - $page-bleed
    margin-left: - $page-bleed
    padding-bottom: $page-bleed
    padding-left: $page-bleed
    background-color: #000000
  @bottom-left
    content: " "
    margin-top: 36px
    margin-bottom: - $page-bleed
    margin-left: -1px
    margin-right: -1px
    padding: 0 1px $page-bleed
    background-color: #000000
  @bottom-right
    content: " "
    margin-top: 36px
    margin-bottom: - $page-bleed
    margin-left: -1px
    margin-right: -1px
    padding: 0 1px $page-bleed
    background-color: #000000
  @bottom-right-corner
    content: " "
    margin-top: 36px
    margin-bottom: - $page-bleed
    margin-right: - $page-bleed
    padding-bottom: $page-bleed
    padding-right: $page-bleed
    background-color: #000000

@page:after
  content: " "
  position: absolute
  background-color: red
  widht: 100px
  height: 100px

@page :right
  margin: 52px 45px 100px 25px

  @bottom-right
    content: counter(page)
    font: $nombre-font
    color: #ffffff

@page :left
  margin: 52px 25px 100px 45px

  @bottom-left
    content: counter(page)
    font: $nombre-font
    color: #ffffff
